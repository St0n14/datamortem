# dataMortem API Configuration
# Copier ce fichier en .env et ajuster les valeurs

# Environment
DM_ENV=development

# Database (PostgreSQL)
DM_DB_URL=postgresql://datamortem:datamortem_dev_password@localhost:5432/datamortem

# Celery
DM_CELERY_BROKER=redis://localhost:6379/0
DM_CELERY_BACKEND=redis://localhost:6379/1

# OpenSearch
DM_OPENSEARCH_HOST=localhost
DM_OPENSEARCH_PORT=9200
DM_OPENSEARCH_SCHEME=http
DM_OPENSEARCH_USER=
DM_OPENSEARCH_PASSWORD=
DM_OPENSEARCH_VERIFY_CERTS=false
DM_OPENSEARCH_SSL_SHOW_WARN=false

# OpenSearch Index Configuration
DM_OPENSEARCH_INDEX_PREFIX=datamortem
DM_OPENSEARCH_SHARD_COUNT=1
DM_OPENSEARCH_REPLICA_COUNT=0
DM_OPENSEARCH_BATCH_SIZE=500
DM_OPENSEARCH_MAX_RETRIES=3

# Storage
DM_LAKE_ROOT=/lake

# CORS Origins (comma-separated)
DM_ALLOWED_ORIGINS=http://localhost:5174,http://127.0.0.1:5174

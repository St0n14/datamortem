# Environment Configuration
DM_ENV=development  # development, staging, production

# Database
DM_DB_URL=postgresql://datamortem_user:CHANGE_ME_SECURE_PASSWORD@postgres:5432/datamortem_db

# API Configuration
DM_API_BASE_URL=http://localhost:8000
DM_ALLOWED_ORIGINS=http://localhost:5174,http://127.0.0.1:5174

# Storage
DM_LAKE_ROOT=/lake

# Celery (Task Queue)
DM_CELERY_BROKER=redis://redis:6379/0
DM_CELERY_BACKEND=redis://redis:6379/0

# OpenSearch Configuration
DM_OPENSEARCH_HOST=opensearch
DM_OPENSEARCH_PORT=9200
DM_OPENSEARCH_SCHEME=http
DM_OPENSEARCH_USER=admin
DM_OPENSEARCH_PASSWORD=CHANGE_ME_OPENSEARCH_PASSWORD
DM_OPENSEARCH_VERIFY_CERTS=false
DM_OPENSEARCH_SSL_SHOW_WARN=false

# OpenSearch Index Configuration
DM_OPENSEARCH_INDEX_PREFIX=datamortem
DM_OPENSEARCH_SHARD_COUNT=1
DM_OPENSEARCH_REPLICA_COUNT=0
DM_OPENSEARCH_BATCH_SIZE=500
DM_OPENSEARCH_MAX_RETRIES=3

# JWT Authentication (CRITICAL: Change this to a secure random string!)
# Generate with: openssl rand -hex 32
DM_JWT_SECRET=CHANGE_ME_TO_RANDOM_256_BIT_SECRET_KEY_GENERATED_WITH_OPENSSL
